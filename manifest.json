{
    "manifest_version": 3,
    "name": "Chat to Myself",
    "version": "1.0",
    "description": "A minimal popup chat app for Chrome.",
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup": "src/popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["storage"],
    "host_permissions": []
}
