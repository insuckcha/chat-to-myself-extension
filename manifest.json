{
    "manifest_version": 3,
    "name": "Chat to Myself",
    "version": "1.0",
    "description": "Send messages to yourself like a chat app.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "permissions": ["storage"]
}
